<% layout('layout') %>
	<div class="row justify-content-center">
		<img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="No image">
	</div>
	<div class="row justify-content-center">
		<h3>
			<%= user.profile.name %>
		</h3>
	</div>
	<div class="row justify-content-center">
		<h3>
			<%= user.email %>
		</h3>
	</div>
	<div class="row justify-content-center">
		<h3>
			<% if (user.address === '' || typeof user.address === 'undefined' ) { %>
				<h3>Address:
					<span style="color: #c0392b; font-weight: bold">You have no address yet!</span>
				</h3>
				<% } else { %>
					<h3>Address:
						<%= user.address %>
					</h3>
					<% } %>
		</h3>
	</div>
	<div class="row justify-content-center">
		<a class="btn btn-primary" href="/profile/edit" role="button">Edit profile</a>
	</div>
	<h2 class="text-success">
		Purchase history:
	</h2>
	<div class="row">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Item's Name</th>
					<th scope="col">Paid</th>
					<th scope="col">Date</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i=0; i<user.history.length; i++) { %>
					<tr>
						<th scope="row">
							<%= i %>
						</th>
						<td>
							<%= user.history[i].item.name  %>
						</td>
						<td>
							<%= user.history[i].paid %>
						</td>
						<td>
							<%= user.history[i].date %>
						</td>
					</tr>
					<% } %>
			</tbody>
		</table>
	</div>